{
    "workbench.list.smoothScrolling": true,
    "editor.smoothScrolling": true,
    "terminal.integrated.smoothScrolling": true,
    "editor.cursorBlinking": "smooth",
    "editor.mouseWheelZoom": true,
    "files.autoSave": "onFocusChange",
    "editor.fontFamily": "LXGW WenKai Screen",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.formatOnPaste": true,
    "liveServer.settings.donotShowInfoMsg": true,
    "security.workspace.trust.untrustedFiles": "open",
    "settingsSync.ignoredExtensions": [
        "cweijan.epub-reader",
        "esbenp.prettier-vscode",
        "cweijan.vscode-office",
        "vscode-icons-team.vscode-icons",
        "lzm0x219.vscode-markdown-github",
        "twxs.cmake",
        "ms-vscode.cmake-tools",
        "editorconfig.editorconfig",
        "ms-vscode.makefile-tools",
        "13xforever.language-x86-64-assembly"
    ],
    "workbench.editor.editorActionsLocation": "hidden",
    "workbench.activityBar.location": "bottom",
    "workbench.colorTheme": "GitHub Dark",
    "editor.fontLigatures": true,
    "workbench.editor.showTabs": "single",
    "workbench.startupEditor": "none",
    "workbench.iconTheme": "vscode-great-icons",
    "window.commandCenter": false,
    "workbench.layoutControl.enabled": false,
    "window.menuBarVisibility": "compact",
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "Codegeex.Privacy": false,
    "editor.fontSize": 19.5,
    "explorer.confirmPasteNative": false,
    "Codegeex.Comment.LanguagePreference": "中文",
    "zenMode.showTabs": "none",
    "workbench.editorAssociations": {
        "{git,gitlens}:/**/*.{md,csv,svg}": "default"
    },
    "markdown.preview.fontSize": 22,
    "markdown.preview.fontFamily": "LXGW Wenkai Screen",
    "git.confirmSync": false,
    "editor.lineNumbers": "off",
    "Codegeex.DisabledFor": {
        "markdown": true
    }
}